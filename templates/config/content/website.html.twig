{% extends 'config/base.html.twig' %}

{% block content_config %}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="admin-chat-tab" data-toggle="tab" href="#admin-chat" role="tab"
               aria-controls="admin-chat" aria-selected="true">{{ 'dashboard.admin-chat'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users"
               aria-selected="false">{{ 'dashboard.users-chat'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="rooms-chat-tab" data-toggle="tab" href="#rooms-chat" role="tab" aria-controls="rooms-chat"
               aria-selected="false">{{ 'dashboard.rooms-chat'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="configuration-tab" data-toggle="tab" href="#configuration" role="tab"
               aria-controls="configuration" aria-selected="false">{{ 'word.configuration'|trans }}</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="admin-chat" role="tabpanel" aria-labelledby="admin-chat-tab">
            {{ include('config/content/website/admin-chat.html.twig') }}
        </div>
        <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
            {{ include('config/content/website/users.html.twig') }}
        </div>
        <div class="tab-pane fade" id="rooms-chat" role="tabpanel" aria-labelledby="rooms-chat-tab">
            {{ include('config/content/website/rooms-chat.html.twig') }}
        </div>
        <div class="tab-pane fade" id="configuration" role="tabpanel" aria-labelledby="configuration-tab">
            {{ include('config/content/website/configuration.html.twig') }}
        </div>
    </div>
{% endblock %}