<!doctype html>
<html lang="{{ app.request.getLocale() }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {#Google localized versions#}
    {% set available_locale = available_locale|split('|') %}
    {% set route = app.request.attributes.get('_route') %}
    {% for locale in available_locale %}
        <link rel="alternate" hreflang="{{ locale }}" href="{{ absolute_url(path(route, { _locale: locale })) }}"/>
    {% endfor %}
    {#Google localized versions#}
    {% block stylesheets %}{% endblock %}
</head>
<body>
{{ include('view/header_nav.html.twig') }}
<div class="container">
    {% block body %}{% endblock %}
</div>
<script src="{{ asset('build/app.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
